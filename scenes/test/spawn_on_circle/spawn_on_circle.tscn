script/source = "extends Node2D
@onready var icon: Sprite2D = $icon
const DOT = preload(\"res://scenes/test/spawn_on_circle/dot.tscn\")

var radius := 100

func _ready() -> void:
	#for i in 500:
		#create_dot()
	print('owner: ', owner, ' from  SpawnOnCircle')
	pass
	
func create_dot():
	var dot_instance = DOT.instantiate()
	dot_instance.global_position = calc_rnd_pos()
	add_child(dot_instance)
	
func calc_rnd_pos():
	var rnd_rotation = Vector2.RIGHT.rotated(randf_range(0, TAU))
	var new_pos = icon.global_position + radius * rnd_rotation
	return new_pos
	
"

